{
"version": "1.0",
"entity": "Job",
"initial": "DRAFT",
"states": ["DRAFT", "SCHEDULED", "IN_PROGRESS", "COMPLETE", "INVOICED", "CANCELLED"],
"transitions": {
"SCHEDULE": { "from": ["DRAFT"], "to": "SCHEDULED", "guards": ["hasSchedule"], "effects": ["emitScheduled"] },
"START": { "from": ["SCHEDULED"], "to": "IN_PROGRESS" },
"COMPLETE": { "from": ["IN_PROGRESS"], "to": "COMPLETE", "effects": ["notifyComplete"] },
"INVOICE": { "from": ["COMPLETE"], "to": "INVOICED", "effects": ["enqueueXeroInvoice"] },
"CANCEL": { "from": ["DRAFT", "SCHEDULED", "IN_PROGRESS"], "to": "CANCELLED" }
}
}